{
  "name": "spec-test-bot",
  "description": "GitHub checks for spec PRs",
  "version": "0.0.1",
  "private": true,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/foolip/spec-test-bot.git"
  },
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "coverage": "nyc npm run test",
    "deploy": "gcloud app deploy --project=spec-test-bot",
    "deploy-staging": "gcloud app deploy --project=spec-test-bot --version=staging --no-promote",
    "deploy-queue": "gcloud app deploy --project=spec-test-bot queue.yaml",
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "start": "node app.js",
    "start-dev": "node app.js | bunyan",
    "test": "NODE_ENV=test mocha -u tdd",
    "test-watch": "NODE_ENV=test mocha -u tdd --watch"
  },
  "dependencies": {
    "@google-cloud/logging-bunyan": "3.3.1",
    "@google-cloud/tasks": "2.5.0",
    "@octokit/auth-app": "3.6.1",
    "@octokit/rest": "18.12.0",
    "bunyan": "1.8.15",
    "express": "4.17.3"
  },
  "devDependencies": {
    "chai": "4.3.6",
    "chai-http": "4.3.0",
    "eslint": "8.19.0",
    "eslint-config-google": "0.14.0",
    "mocha": "9.2.2",
    "nyc": "15.1.0",
    "proxyquire": "2.1.3"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "google"
    ],
    "env": {
      "es6": true,
      "mocha": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "rules": {
      "max-len": "off",
      "require-jsdoc": "off"
    }
  },
  "nyc": {
    "all": true
  }
}
