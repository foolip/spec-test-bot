{
  "name": "spec-test-bot",
  "description": "GitHub checks for spec PRs",
  "version": "0.0.1",
  "private": true,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/foolip/spec-test-bot.git"
  },
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "deploy": "gcloud app deploy --project=spec-test-bot",
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "start": "node app.js",
    "start-dev": "node app.js | bunyan"
  },
  "dependencies": {
    "@google-cloud/logging-bunyan": "3.0.1",
    "@octokit/auth-app": "2.6.0",
    "@octokit/rest": "18.0.6",
    "@octokit/webhooks": "7.11.2",
    "bunyan": "1.8.14",
    "express": "4.17.1"
  },
  "devDependencies": {
    "eslint": "7.9.0",
    "eslint-config-google": "0.14.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "google"
    ],
    "env": {
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "rules": {
      "require-jsdoc": "off"
    }
  }
}
