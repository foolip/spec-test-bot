{
  "name": "spec-test-bot",
  "description": "GitHub checks for spec PRs",
  "version": "0.0.1",
  "private": true,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/foolip/spec-test-bot.git"
  },
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "coverage": "nyc npm run test",
    "deploy": "gcloud app deploy --project=spec-test-bot",
    "deploy-staging": "gcloud app deploy --project=spec-test-bot --version=staging --no-promote",
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "start": "node app.js",
    "start-dev": "node app.js | bunyan",
    "test": "NODE_ENV=test mocha -u tdd"
  },
  "dependencies": {
    "@google-cloud/logging-bunyan": "3.0.1",
    "@octokit/auth-app": "2.6.0",
    "@octokit/rest": "18.0.6",
    "bunyan": "1.8.14",
    "express": "4.17.1"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "chai-http": "4.3.0",
    "eslint": "7.9.0",
    "eslint-config-google": "0.14.0",
    "mocha": "8.1.3",
    "nyc": "15.1.0",
    "proxyquire": "2.1.3"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "google"
    ],
    "env": {
      "es6": true,
      "mocha": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "rules": {
      "require-jsdoc": "off"
    }
  },
  "nyc": {
    "all": true
  }
}
